<title>Adoptions</title>

<body>
    <h1>Adoptions</h1>
        [ <a href="/">Homepage</a> | <a href="customers">Customers</a> | <a href="pets">Pets</a> | <a
        href="employees">Employees</a> | <a href="adoptions">Adoptions</a> | <a
        href="vaccinations">Vaccinations</a> | <a href="petvaccinations">PetVaccinations</a>]
    <p><strong>View Adoptions</strong></p>

    {{!-- Creates a table --}}
    <table border="1" cellpadding="5" id="adoption-table">

        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the customer_id, first_name, last_name, street, city, state, 
            zip_code, and phone_number, in order --}}
            {{#each data}}
                <td>{{this.adoption_id}}</td>
                <td>{{this.customer_id}}</td>
                <td>{{this.date}}</td>
                <td>{{this.pet_id}}</td>
                <td>{{this.employee_id}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <br>
    <div>
        <form id="add-adoption-form" method="POST" action="/add-adoption-form">
            <fieldset>
                <legend><strong>Add Adoption</strong></legend>

                <label for="input-customer_id">customer_id: </label>
                <select type="number" name="input-customer_id" id="input-customer_id" required>
                    <option value="">Select a customer</option>
                    {{#each customer}}
                    <option value="{{this.customer_id}}">{{this.customer_id}}</option>
                    {{/each}}
                    </select><br>

                <label for="input-date">date: </label>
                <input type="date" name="input-date" id="input-date" required></input><br>

                <label for="input-pet_id">pet_id: </label>
                <select type="number" name="input-pet_id" id="input-pet_id" required>
                      <option value="">Select a pet</option>
                    {{#each pet}}
                    <option value="{{this.pet_id}}">{{this.pet_id}}</option>
                    {{/each}}
                    </select><br>
                    
                <label for="input-employee_id">employee_id: </label>
                <select type="number" name="input-employee_id" id="input-employee_id" required>
                    <option value="">Select a employee</option>
                    <option value="NULL">NULL</option>
                    {{#each employee}}
                    <option value="{{this.employee_id}}">{{this.employee_id}}</option>
                    {{/each}}
                    </select><br>
            </fieldset><br>
            <input class="btn" type="submit" value="Add Adoption">
        </form>
    </div>
</body>