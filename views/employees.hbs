<title>Employees</title>

<body>
    <h1>Employees</h1>
        [ <a href="/">Homepage</a> | <a href="customers">Customers</a> | <a href="pets">Pets</a> | <a
        href="employees">Employees</a> | <a href="adoptions">Adoptions</a> | <a
        href="vaccinations">Vaccinations</a> | <a href="petvaccinations">PetVaccinations</a>]
    <p><strong>View Employees</strong></p>

    <table border="1" cellpadding="5">
        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the customer_id, first_name, last_name, street, city, state, 
            zip_code, and phone_number, in order --}}
            {{#each data}}
            <tr>
                <td>{{this.pet_id}}</td>
                <td>{{this.first_name}}</td>
                <td>{{this.last_name}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>



    <br>

    <div>
        <form id="add-employee-form" method="POST" action="/add-employee-form">
            <fieldset>
                <legend><strong>Add employee</strong></legend>
                <label for="input-first_name">first name: </label>
                <input type="text" name="input-first_name" id="input-first_name" required="required">
                
                <label for="input-last_name">last name: </label>
                <input type="text" name="input-last_name" id="input-last_name" required="required">
            </fieldset><br>
            <input type="submit" value="Add Employee">
        </form>
    </div>
</body>